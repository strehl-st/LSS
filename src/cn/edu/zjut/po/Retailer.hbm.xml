<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD3.0//EN"

        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="cn.edu.zjut.po.Retailer" table="retailer" catalog="lss">

        <id name="retailer_id" type="int">
            <column name="retailer_id"/>
            <generator class="increment"/>
        </id>
        <property name="user_id" type="int">
            <column name="user_id"/>
        </property>
        <property name="retailername" type="string">
            <column name="retailername" length="255"/>
        </property>
        <property name="retailertel" type="string">
            <column name="retailertel" length="255"/>
        </property>

    </class>

</hibernate-mapping>
